{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "billsub-timeline",
  "version": "1.0.0",
  "identifier": "com.billsub.timeline",
  "build": {
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "BillSub Timeline",
        "width": 800,
        "height": 500,
        "minWidth": 400,
        "minHeight": 200,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}
